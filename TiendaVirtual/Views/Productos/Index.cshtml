@model IEnumerable<TiendaVirtual.Producto>

@{
    ViewBag.Title = "Books";
}

<h2>Books available</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Precio)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Cantidad)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Descripción)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Imagen)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        if (item.Cantidad != 0)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Precio)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Cantidad)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Descripción)
                </td>
                <td>
                    <img src="~/Content/books/@(item.Imagen)" width="90" />
                </td>
                <td>
                    <a href="@Url.Action("Edit", "Productos", new { id = item.Id })">
                        <img src="~/Content/icons/edit.png" />
                    </a>

                    <a href="@Url.Action("Details", "Productos", new { id = item.Id })">
                        <img src="~/Content/icons/details.png" />
                    </a>

                    <a href="@Url.Action("Delete", "Productos", new { id = item.Id })">
                        <img src="~/Content/icons/delete.png" />
                    </a>
                    
                    <a href="@Url.Action("Add", "Carritos", new { id = item.Id })" >
                        <img src="~/Content/icons/carritoAdd.png" />
                    </a >
                </td >
            </tr >
}
}

</table>
