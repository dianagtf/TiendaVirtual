@model IEnumerable<TiendaVirtual.Producto>

@{
    ViewBag.Title = "Basket";
}

<h2>Basket</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Precio)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Cantidad)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Descripción)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Imagen)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Precio)
            </td>
            <td>
                <!--@Html.DisplayFor(modelItem => item.Cantidad) -->
                1
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Descripción)
            </td>
            <td>
                <img src="~/Content/books/@(item.Imagen)" width="90" />
            </td>
            <td>
                <a href="@Url.Action("Edit", "Carritos", new { id = item.Id })">
                    <img src="~/Content/icons/edit.png" />
                </a>

                <a href="@Url.Action("Details", "Carritos", new { id = item.Id })">
                    <img src="~/Content/icons/details.png" />
                </a>

                <a href="@Url.Action("Index", "Productos", new { id = item.Id })">
                    <img src="~/Content/icons/back.png" />
                </a>

            </td>
        </tr>

    }

</table>

